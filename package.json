{
  "name": "blkpages-loyalty-system",
  "version": "1.0.0",
  "description": "Complete BlkPages loyalty system with mobile verification and redemption caps",
  "main": "loyalty-system-setup.js",
  "scripts": {
    "start": "node loyalty-system-setup.js",
    "dev": "nodemon loyalty-system-setup.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:setup": "mysql -u username -p database_name < blkpoints-database-setup.sql",
    "db:seed": "node scripts/seed-database.js",
    "engine:run": "node -e \"require('./loyalty-engine').runLoyaltyEngineManually(require('./mock-db'))\"",
    "engine:test": "node -e \"require('./loyalty-engine').testNotificationSystem(require('./mock-db'), 'user-123')\""
  },
  "keywords": [
    "loyalty",
    "points",
    "mobile-verification",
    "redemption-cap",
    "blkpages",
    "beauty",
    "wellness",
    "booking"
  ],
  "author": "BlkPages Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "node-cron": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "crypto": "^1.0.1",
    "handlebars": "^4.7.8",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "autocannon": "^7.12.0",
    "winston": "^3.11.0",
    "prom-client": "^15.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blkpages/loyalty-system.git"
  },
  "bugs": {
    "url": "https://github.com/blkpages/loyalty-system/issues"
  },
  "homepage": "https://github.com/blkpages/loyalty-system#readme"
}