# Production Environment Configuration
# BlkPages Production Environment Variables

# Environment
NODE_ENV=production
ENVIRONMENT=production
DEBUG=false

# Database Configuration (Production)
DB_HOST=prod-db.blkpages.co.uk
DB_PORT=5432
DB_NAME=blkpages_production
DB_USER=blkpages_prod_user
DB_PASSWORD=${DB_PASSWORD}
DB_SSL=true

# API Configuration (Production)
API_BASE_URL=https://api.blkpages.co.uk
API_SECRET_KEY=${API_SECRET_KEY}
API_RATE_LIMIT=5000
API_TIMEOUT=30000

# Authentication (Production)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRY=30m
SESSION_SECRET=${SESSION_SECRET}
SESSION_TIMEOUT=1800000

# Email Configuration (Production)
SMTP_HOST=smtp.blkpages.co.uk
SMTP_PORT=587
SMTP_USER=noreply@blkpages.co.uk
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_SECURE=true
EMAIL_FROM=noreply@blkpages.co.uk
EMAIL_REPLY_TO=support@blkpages.co.uk

# Payment Processing (Production - Stripe Live Keys)
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}
STRIPE_WEBHOOK_ENDPOINT=https://api.blkpages.co.uk/webhooks/stripe

# Security Configuration (Production)
ENCRYPTION_KEY=${ENCRYPTION_KEY}
CSRF_SECRET=${CSRF_SECRET}
RATE_LIMIT_WINDOW=900000
MAX_LOGIN_ATTEMPTS=5
MAX_SIGNUP_ATTEMPTS=3
MAX_PASSWORD_RESET_ATTEMPTS=3

# GDPR Configuration (Production)
DATA_RETENTION_DAYS=2555
CONSENT_EXPIRY_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555
DATA_EXPORT_EXPIRY_HOURS=24

# Cookie Configuration (Production)
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=Lax
COOKIE_DOMAIN=.blkpages.co.uk
COOKIE_CONSENT_EXPIRY_DAYS=365

# Monitoring & Logging (Production)
LOG_LEVEL=info
AUDIT_LOGGING=true
SECURITY_LOGGING=true
PERFORMANCE_LOGGING=true
ERROR_LOGGING=true

# File Storage (Production)
STORAGE_TYPE=s3
STORAGE_BUCKET=blkpages-production-uploads
STORAGE_REGION=eu-west-2
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cache Configuration (Production)
CACHE_TYPE=redis
CACHE_HOST=redis.blkpages.co.uk
CACHE_PORT=6379
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# CDN Configuration (Production)
CDN_ENABLED=true
CDN_URL=https://cdn.blkpages.co.uk
CDN_CACHE_TTL=86400

# Feature Flags (Production)
FEATURE_GDPR_COMPLIANCE=true
FEATURE_SECURITY_HARDENING=true
FEATURE_AUDIT_LOGGING=true
FEATURE_RATE_LIMITING=true
FEATURE_CSRF_PROTECTION=true
FEATURE_DATA_ENCRYPTION=true
FEATURE_COOKIE_CONSENT=true
FEATURE_MARKETING_CONSENT=true
