# Staging Environment Configuration
# BlkPages Staging Environment Variables

# Environment
NODE_ENV=staging
ENVIRONMENT=staging
DEBUG=true

# Database Configuration (Staging)
DB_HOST=staging-db.blkpages.co.uk
DB_PORT=5432
DB_NAME=blkpages_staging
DB_USER=blkpages_staging_user
DB_PASSWORD=staging_password_secure_123
DB_SSL=true

# API Configuration (Staging)
API_BASE_URL=https://staging-api.blkpages.co.uk
API_SECRET_KEY=staging_api_secret_key_123
API_RATE_LIMIT=1000
API_TIMEOUT=30000

# Authentication (Staging)
JWT_SECRET=staging_jwt_secret_key_123
JWT_EXPIRY=30m
SESSION_SECRET=staging_session_secret_123
SESSION_TIMEOUT=1800000

# Email Configuration (Staging)
SMTP_HOST=staging-smtp.blkpages.co.uk
SMTP_PORT=587
SMTP_USER=staging@blkpages.co.uk
SMTP_PASSWORD=staging_smtp_password_123
SMTP_SECURE=true
EMAIL_FROM=noreply@staging.blkpages.co.uk
EMAIL_REPLY_TO=support@staging.blkpages.co.uk

# Payment Processing (Staging - Stripe Test Keys)
STRIPE_PUBLISHABLE_KEY=pk_test_staging_key_123
STRIPE_SECRET_KEY=sk_test_staging_key_123
STRIPE_WEBHOOK_SECRET=whsec_staging_webhook_secret_123
STRIPE_WEBHOOK_ENDPOINT=https://staging-api.blkpages.co.uk/webhooks/stripe

# Security Configuration (Staging)
ENCRYPTION_KEY=staging_encryption_key_123
CSRF_SECRET=staging_csrf_secret_123
RATE_LIMIT_WINDOW=900000
MAX_LOGIN_ATTEMPTS=5
MAX_SIGNUP_ATTEMPTS=3
MAX_PASSWORD_RESET_ATTEMPTS=3

# GDPR Configuration (Staging)
DATA_RETENTION_DAYS=2555
CONSENT_EXPIRY_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555
DATA_EXPORT_EXPIRY_HOURS=24

# Cookie Configuration (Staging)
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=Lax
COOKIE_DOMAIN=.staging.blkpages.co.uk
COOKIE_CONSENT_EXPIRY_DAYS=365

# Monitoring & Logging (Staging)
LOG_LEVEL=debug
AUDIT_LOGGING=true
SECURITY_LOGGING=true
PERFORMANCE_LOGGING=true
ERROR_LOGGING=true

# File Storage (Staging)
STORAGE_TYPE=local
STORAGE_PATH=./staging-uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cache Configuration (Staging)
CACHE_TYPE=memory
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/blkpages_test
TEST_API_BASE_URL=http://localhost:3000
TEST_EMAIL_DISABLED=true
TEST_PAYMENT_DISABLED=true

# Feature Flags (Staging)
FEATURE_GDPR_COMPLIANCE=true
FEATURE_SECURITY_HARDENING=true
FEATURE_AUDIT_LOGGING=true
FEATURE_RATE_LIMITING=true
FEATURE_CSRF_PROTECTION=true
FEATURE_DATA_ENCRYPTION=true
FEATURE_COOKIE_CONSENT=true
FEATURE_MARKETING_CONSENT=true
